{
  "env": {
    "es6": true,
    "node": true
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "sourceType": "module",
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true
    }
  },
  "extends": [
    "standard"
  ],
  "rules": {
    "comma-dangle": [
      "error",
      "always-multiline"
    ]
  }
}
